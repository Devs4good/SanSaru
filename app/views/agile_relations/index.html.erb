<h1>Agile Relations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agile_relations.each do |agile_relation| %>
      <tr>
        <td><%= agile_relation.name %></td>
        <td><%= link_to 'Show', agile_relation %></td>
        <td><%= link_to 'Edit', edit_agile_relation_path(agile_relation) %></td>
        <td><%= link_to 'Destroy', agile_relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

