<div class="row align-items-center">
  <div class="col-md-4 offset-md-4">
    <h2>Editar cuenta</h2>
  </div>
</div>
<div class="row align-items-center">
  <div class="col-md-12 offset-md-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

      <fieldset>
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">
            <%= f.label :email, "Email" %>
          </label>
          <div class="col-md-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-md' %>
          </div>
          </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-group">
              <label class="col-md-4 control-label" for="textinput">
                Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              </label>
            </div>

  <% end %>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.label :name, "Nombres" %>
            </label>
            <div class="col-md-4">
              <%= f.text_field :name, class: 'form-control input-md' %>
            </div>

          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.label :lastname, "Apellidos" %>
            </label>
            <div class="col-md-4">
              <%= f.text_field :lastname, class: 'form-control input-md' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.label :password %> <i>(dejalo en blanco si no lo quieres cambiar)</i><br>
              <% if @minimum_password_length %>
                <em>(
                  <%= @minimum_password_length %> carácteres mínimo)</em>
              <% end %>
            </label>
            <div class="col-md-4">
              <%= f.password_field :password, class: 'form-control input-md' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.label :password_confirmation, "Confirmación" %>
            </label>
            <div class="col-md-4">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-md' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.label :current_password,"Password actual" %> <i>(necesario para confirmar los cambios)</i><br />
            </label>
            <div class="col-md-4">
              <%= f.password_field :current_password, autocomplete: "off", class: 'form-control input-md' %>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <div class="col-md-4">
              <%= f.submit "Actualizar", class: "btn btn-primary" %>
            </div>
          </div>
      </fieldset>
<% end %>

    <h3>Borrar mi cuenta</h3>

    <p>¿Estas seguro? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>


  </div>
</div>

